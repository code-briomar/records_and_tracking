{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "records-and-tracking",
  "version": "0.1.0",
  "identifier": "com.records-and-tracking.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Records & Tracking",
        "resizable": true,
        "decorations": true,
        "transparent": true,
        "width": 800,
        "height": 600,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Briomar",
    "shortDescription": "Records & Tracking is a simple and easy to use application for tracking your records.",
    "category": "Utility",
    "copyright": "Copyright (c) 2025",
    "license": "MIT",
    "homepage": "https://briomar.me"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEMjg3ODFDN0M1NTc3NUQKUldSZGQxVjhISGdvWGI4akNTNS9xaWxiMkRQa1F2Qm1GeDZZVjBBQlNvVi9wL21GRHZrazBoMG8K",
      "endpoints": [
        "https://github.com/code-briomar/records-and-tracking/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
